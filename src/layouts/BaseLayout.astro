---
interface Props {
  title?: string;
}

const { title = 'Astro Blog' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="A blog built with Astro and Decap CMS" />
    <link rel="stylesheet" href="/global.css" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="site-title">Astro Blog</a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/posts">Posts</a>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Astro Blog. All rights reserved.</p>
    </footer>
  </body>
</html>
